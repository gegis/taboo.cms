{
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  "plugins": ["prettier", "react"],
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "browser": false
  },
  "settings": {
    "react": {
      "version": "16.6"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "window": true,
    "navigator": true,
    "document": true,
    "$": true,
    "ScrollReveal": true,
    "Swiper": true,
    "app": true
  },
  "rules": {
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "no-console": 1,
    "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": false }],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "exports": "always-multiline",
      "functions": "never",
      "imports": "always-multiline",
      "objects": "always-multiline"}
    ],
    "semi": ["error", "always"],
    "require-atomic-updates": "off"
//    "prettier/prettier": [
//      "error",
//      {
//        "trailingComma": "es5",
//        "singleQuote": true,
//        "printWidth": 120
//      }
//    ]
  }
}
