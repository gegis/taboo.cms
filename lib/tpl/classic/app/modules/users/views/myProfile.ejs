<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1>My Profile</h1>
      <div class="card">
        <div class="card-body">
          <form id="my-profile-form">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" value="<%=userData.firstName%>" required />
              </div>
              <div class="form-group col-md-6">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" value="<%=userData.lastName%>" required />
              </div>
            </div>
            <div class="form-group">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" value="<%=userData.email%>" required />
            </div>
            <div class="form-group">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" value="" />
              <small id="passwordHelpInline" class="text-muted">
                Leave it empty, if you don't want to update your password
              </small>
            </div>
            <div class="form-group">
              <label for="street" class="form-label">Street Address</label>
              <input type="text" class="form-control" id="street" value="<%=userData.street%>" required />
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" value="<%=userData.city%>" required />
              </div>
              <div class="form-group col-md-6">
                <label for="state" class="form-label">State</label>
                <input type="text" class="form-control" id="state" value="<%=userData.state%>" required />
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="country" class="form-label">Country</label>
                <select type="text" class="form-control" id="country" required>
                  <option value="">Please Select...</option>
                  <% let selected; %>
                  <% for (let i = 0; i < countryOptions.length; i++) { %>
                    <% selected = (countryOptions[i].key === userData.country) ? 'selected="selected"' : ''; %>
                    <option value="<%=countryOptions[i].key%>" <%=selected%> ><%=countryOptions[i].value%></option>
                  <% } %>
                </select>
              </div>
              <div class="form-group col-md-6 ">
                <label for="postCode" class="form-label">ZIP Code</label>
                <input type="text" class="form-control" id="postCode" value="<%=userData.postCode%>" required />
              </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right form-submit">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
